<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Titulo</label>
        <input type="text" class="form-control" name="Titulo" placeholder="Titulo" value="{{employee.fullName}}">
        <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Descripcion</label>
        <input type="text" class="form-control" name="Descripcion" placeholder="Descripcion" value="{{employee.email}}">

    </div>
    <div class="form-group col-md-6">
        <label>Observaciones</label>
        <input type="text" class="form-control" name="Observaciones" placeholder="Observaciones" value="{{employee.mobile}}">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info" style="background-color: #5E0011;"><i class="fa fa-database"></i> Enviar</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> Ver Menu</a>
    </div>
</form>